<h2 style="font-family:monospace;">Hey,Create your new blog</h2>
</br>
<%= form_for(@blogs) do |f| %>
  <div class="form-group" style="font-family:monospace;">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control", placeholder: "Blog Name", required: true %><br/>
   <label>Description</label>
    <%= f.text_area :content, class: "form-control", placeholder: "Blog description", required: true %><br/>

    <%= f.submit text: "create", class: "btn btn-dark" %>
  </div>
<% end %>




