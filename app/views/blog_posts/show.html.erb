<% @blogs.each do |blog| %>

<div class="row" style="margin-top:30px;">
  <div class="col-md-1 float-left ">
 	<%= image_tag("yinyang.png", :alt => "rss feed", :size => '55x55') %> 
    </div>
  <div class="col-md-10">
    <h2> <%= blog.title %></h2>   
  </div>
</div>
<br/>
<div class="card" style="padding: 30px 30px; font-family:monospace; background-color:#f1edf7;">
  <div class="col-md-6 font-weight-bold" >
    <h2>Description:</h2>
  </div>
  </br>
  <div class="col-md-12" style="font-size:25px;">
 
   <%= blog.content %>
 
  </div>
 <div class="row" style="align-items:center;margin-top:30px;">

  <div class="col-md-2" style=" margin-left:10px">
    <%= form_for(@blog) do |f| %>
      <%= f.submit "Like", class: "btn btn-dark" %>
    <% end %>
  </div>
    <%= @blog.likes %> likes
 </div>
 </div>

<% end %>

</br>

<div class="jumbotron" style="background-color:#2f2e30;color:white;font-family:monospace;font-size:18px;">

 <h2> Comments</h2>  
<div class="row" style="margin-top:20px;">
  <div class="col-md-9 font-weight-bold">
    <% @users.each do |user|%> 
    <% if user.email==current_user.email %>
     <p><%= user.email %></p>
     <% end %>
    <% end %>
  </div> 
  <div class="col-md-3">
   <a class="btn btn-light btn-lg float-right" href="<%= new_comment_path %>" role="button">New Comment</a>
  </div>
</div>

<% @comments.each do |comment| %>

 <div class="row" style="margin-top:30px;">
  <% @users.each do |user|%>
  <% if user.id==comment.user_id %>
 <div class="col-md-12 font-weight-bold">
  <p><%= user.email %></p>
 </div>
 <div class="col-md-10">
 <%= comment.content %>
 </div>
 <% end %>
 <% end %>
  
</div>
  <% end %>

</div>

</br>
</br>






